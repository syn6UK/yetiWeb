{
    "name": "lanos/api-framework",
    "description": "A framework for RESTFul Services, built upon Slim, utilizing Eloquent ORM and oAuth 2.0",
    "keywords": ["microframework", "rest", "router", "psr7", "lanos", "api"],
    "homepage": "http://github.com/syn6uk/lanosAPI",
    "type" : "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Lane",
            "email": "rob@nulead.co.uk",
            "homepage": "http://www.nulead.co.uk/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "^5.4",
      "ext-json": "*",
        "sendgrid/sendgrid": "^7.4",
        "tuupola/slim-basic-auth": "^3.2",
      "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
